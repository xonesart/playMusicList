    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <!-- Оголошення біна з id="musicBean" та class="ua.studio.springcourse.PopMusic" -->
    <bean id="popMusicBean"
          class="ua.studio.springcourse.PopMusic"
          scope="prototype"
          init-method="doMyInit"
          destroy-method="doMyDestroy"
            >
    </bean>
    <bean id="rockMusicBean"
          class="ua.studio.springcourse.RockMusic"
          init-method="doMyInit"
          destroy-method="doMyDestroy">
    </bean>
    <bean id="classicalMusicBean"
          class="ua.studio.springcourse.ClassicalMusic"
          init-method="doMyInit"
          destroy-method="doMyDestroy"
          factory-method="getClassicalMusic">
